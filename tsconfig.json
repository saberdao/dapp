{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",                                 
    "lib": ["dom", "esnext"],                                        
    "jsx": "react",                              
    "module": "esnext",                                
    "moduleResolution": "node",                       
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                      
    "skipLibCheck": true,
    "paths": {
      "@/src/*": ["./src/*"],
    }
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
